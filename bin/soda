#!/bin/bash

self_dir=$(cd $(dirname $0) && pwd)
top_dir=$(dirname $self_dir)
export SODA_FRAMEWORK_DIR=$top_dir/framework
framework_dir=$SODA_FRAMEWORK_DIR

usage()
{
    cat << EOF
usage:
    $(basename $0) <lang> [options]

lang: 
    python, cpp, java
EOF
    exit 1
}

language=$1
[ -z $language ] && usage

shift

case $language in
    python)
        bash $framework_dir/python/work.sh "$@"
        ;;
    java)
        bash $framework_dir/java/work.sh "$@"
        ;;
    cpp)
        bash $framework_dir/cpp/work.sh "$@"
        ;;
    *)
        usage
        ;;
esac

